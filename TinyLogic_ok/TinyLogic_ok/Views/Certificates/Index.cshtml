@model IEnumerable<TinyLogic_ok.Models.Certificate>

@{
    ViewData["Title"] = "Diplomele Mele";
}

<div class="mx-auto mt-10 max-w-6xl">

    <h1 class="mb-6 text-4xl font-bold text-indigo-600">
        🎓 Diplomele Mele
    </h1>

    @if (!Model.Any())
    {
        <div class="rounded-xl bg-white p-6 text-center text-gray-600 shadow">
            Nu ai obținut nicio diplomă încă.
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">

            @foreach (var cert in Model)
            {
                <div class="rounded-2xl border border-indigo-100 bg-white p-6 shadow-lg transition hover:shadow-xl">

                   
                    <h2 class="text-2xl font-bold text-gray-800">
                        @cert.Course.CourseName
                    </h2>

                    <p class="mt-1 text-sm text-gray-500">
                        Generată pe: @cert.DateGenerated.ToString("dd MMM yyyy")
                    </p>

                    <div class="mt-4 border-t pt-4">

                        <div class="text-sm text-gray-600">
                            Cod diplomă:
                            <span class="rounded bg-gray-100 px-2 py-1 font-mono text-indigo-600">
                                @cert.CertificateCode
                            </span>
                        </div>

                       
                        <a href="@cert.PdfPath"
                           class="mt-4 block rounded-lg bg-indigo-600 py-2 text-center font-semibold text-white transition hover:bg-indigo-700">
                            Descarcă Diploma 📄
                        </a>
                    </div>
                </div>
            }

        </div>
    }

</div>
