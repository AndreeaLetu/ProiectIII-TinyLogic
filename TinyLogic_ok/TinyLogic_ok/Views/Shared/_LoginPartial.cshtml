@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    // Extrage clasa Tailwind CSS trimisă din _Layout.cshtml
    var buttonClass = ViewData["ButtonClass"] as string ?? "rounded-md px-3 py-2 text-sm font-medium text-gray-600 transition duration-150 ease-in-out hover:border-gray-300 hover:text-gray-900";
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
        <button type="submit" class="@buttonClass">
            <i class="fas fa-sign-out-alt mr-1"></i> Deconectare
        </button>
    </form>
}