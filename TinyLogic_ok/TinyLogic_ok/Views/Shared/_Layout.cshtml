<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TinyLogic</title>

    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/TinyLogic_ok.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="fixed top-0 z-50 w-full border-b border-white/30 bg-white/70 backdrop-blur-xl">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 items-center justify-between">

                    <div class="flex items-center gap-6">
                    
                        <a asp-area="" asp-controller="Home" asp-action="Index"
                           class="group flex items-center gap-2 rounded-xl px-2 py-1 transition hover:bg-white/60">
                          
                            <div class="leading-tight">
                                <div class="text-base font-extrabold tracking-wide text-gray-900">TinyLogic</div>
                              
                            </div>
                        </a>

                       
                        <div class="hidden items-center gap-2 md:flex">
                           
                            @{
                                string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLower();
                                bool isHome = ctrl == "home";
                                bool isTests = ctrl == "tests";
                                bool isCert = ctrl == "certificates";
                                bool isChat = ctrl == "chat";
                            }

                            <a asp-controller="Home" asp-action="Index"
                               class="navlink @(isHome ? "navlink-active" : "")">
                                <i class="fa-solid fa-house mr-2"></i> Acasă
                            </a>

                            <a asp-controller="Tests" asp-action="Index"
                               class="navlink @(isTests ? "navlink-active" : "")">
                                <i class="fa-solid fa-pen-to-square mr-2"></i> Teste
                            </a>

                            <a asp-controller="Certificates" asp-action="Index"
                               class="navlink @(isCert ? "navlink-active" : "")">
                                <i class="fa-solid fa-graduation-cap mr-2"></i> Diplome
                            </a>

                            <a asp-controller="Chat" asp-action="Index"
                               class="navlink @(isChat ? "navlink-active" : "")">
                                <i class="fa-solid fa-robot mr-2"></i> Chatbot
                            </a>
                        </div>
                    </div>

                    
                    <div class="hidden items-center gap-3 md:flex">

                      

                        @if (User.Identity.IsAuthenticated)
                        {
                       
                            <div class="relative">
                                <button id="userMenuBtn"
                                        class="flex items-center gap-3 rounded-xl border border-white/40 bg-white/70 px-3 py-2 shadow-sm
                                           transition hover:bg-white">
                                    <div class="flex h-9 w-9 items-center justify-center rounded-full bg-indigo-600 font-bold text-white">
                                        @(User.Identity?.Name?.FirstOrDefault().ToString().ToUpper() ?? "U")
                                    </div>
                                    <div class="hidden text-left leading-tight lg:block">
                                        <div class="text-sm font-bold text-gray-900">@User.Identity.Name</div>
                                        <div class="-mt-0.5 font-medium text-[11px] text-gray-500">Cont</div>
                                    </div>
                                    <i class="fa-solid fa-chevron-down text-xs text-gray-500"></i>
                                </button>

                                <div id="userMenu"
                                     class="absolute right-0 mt-2 hidden w-56 overflow-hidden rounded-2xl border border-white/50 bg-white shadow-xl">
                                    <a asp-area="Identity" asp-page="/Account/Manage/Index"
                                       class="flex items-center gap-2 px-4 py-3 text-sm font-semibold text-gray-800 hover:bg-gray-50">
                                        <i class="fa-solid fa-user"></i> Profil
                                    </a>

                                    <a asp-controller="Certificates" asp-action="Index"
                                       class="flex items-center gap-2 px-4 py-3 text-sm font-semibold text-gray-800 hover:bg-gray-50">
                                        <i class="fa-solid fa-certificate"></i> Diplome
                                    </a>

                                    <div class="h-px bg-gray-100"></div>

                                    <div class="px-2 py-2">
                                        <partial name="_LoginPartial" view-data='new ViewDataDictionary(ViewData) {
                                                                                                      { "ButtonClass", "w-full text-left rounded-xl px-3 py-2 text-sm font-semibold text-red-600 hover:bg-red-50" }
                                                                                                  }' />
                                </div>
                            </div>
                        </div>
                                                }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login"
                               class="rounded-xl px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-white/70">
                                <i class="fa-solid fa-right-to-bracket mr-2"></i> Conectare
                            </a>

                            <a asp-area="Identity" asp-page="/Account/Register"
                               class="rounded-xl bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition hover:bg-indigo-700">
                                <i class="fa-solid fa-user-plus mr-2"></i> Creează cont
                            </a>
                        }
                    </div>

                   
                    <div class="flex md:hidden">
                        <button id="mobile-menu-button"
                                type="button"
                                class="inline-flex items-center justify-center rounded-xl border border-white/40 bg-white/70 p-2 text-gray-700 shadow-sm
                               hover:bg-white focus:outline-none focus:ring-4 focus:ring-indigo-200">
                            <i id="menu-open-icon" class="fas fa-bars h-6 w-6"></i>
                            <i id="menu-close-icon" class="fas fa-times hidden h-6 w-6"></i>
                        </button>
                    </div>

                </div>
            </div>

         
            <div class="hidden md:hidden" id="mobile-menu">
                <div class="mx-auto max-w-7xl px-4 pb-4">
                    <div class="mt-3 space-y-2 rounded-2xl border border-white/40 bg-white/80 p-3 shadow-sm">
                        <a asp-controller="Home" asp-action="Index" class="navlink block">🏠 Acasă</a>
                        <a asp-controller="Tests" asp-action="Index" class="navlink block">📝 Teste</a>
                        <a asp-controller="Certificates" asp-action="Index" class="navlink block">🎓 Diplome</a>
                        <a asp-controller="Chat" asp-action="Index" class="navlink block">🤖 Chatbot</a>

                        <div class="my-2 h-px bg-gray-200/70"></div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="navlink block">👤 Profil</a>
                            <partial name="_LoginPartial" view-data='new ViewDataDictionary(ViewData) {
                                                                              { "ButtonClass", "navlink block text-red-600 hover:bg-red-50" }
                                                                          }' />
                                                }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="navlink block">➡️ Conectare</a>
                            <a asp-area="Identity" asp-page="/Account/Register"
                               class="block rounded-xl bg-indigo-600 px-4 py-2 text-center text-sm font-semibold text-white">
                                Creează cont
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>

        <style>
            .navlink {
                display: inline-flex;
                align-items: center;
                gap: .25rem;
                padding: .5rem .75rem;
                border-radius: .9rem;
                font-weight: 600;
                font-size: .875rem;
                color: #4b5563; 
                transition: .15s ease-in-out;
            }

                .navlink:hover {
                    background: rgba(255,255,255,.7);
                    color: #111827; 
                }

            .navlink-active {
                background: rgba(99,102,241,.12); 
                color: #3730a3; 
                box-shadow: 0 1px 0 rgba(0,0,0,.03);
            }
        </style>

        <script>
           
            (function () {
                const btn = document.getElementById('userMenuBtn');
                const menu = document.getElementById('userMenu');
                if (!btn || !menu) return;

                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    menu.classList.toggle('hidden');
                });

                document.addEventListener('click', () => {
                    if (!menu.classList.contains('hidden')) menu.classList.add('hidden');
                });
            })();
        </script>

    </header>
   
    <div id="gestureBox"
         class="fixed bottom-6 right-6 z-50 hidden w-64 cursor-move rounded-xl border bg-white shadow-2xl">

        <div class="flex items-center justify-between rounded-t-xl bg-gray-100 px-2 py-1">
            <span class="text-sm font-semibold">Gesturi</span>
            <button onclick="closeGestureBox()" class="font-bold text-red-500">✕</button>
        </div>

    
        <img id="gestureVideo" src="http://localhost:5000/video-feed" class="w-full rounded-b-xl" />

        <div class="p-2 text-center">
            <span class="text-sm">Gest:</span>
            <b id="gestureLabel" class="text-red-500">---</b>
        </div>
    </div>

    @{
        bool fullWidth = ViewData["FullWidth"] as bool? ?? false;

     
        string wrapperClass = "mx-auto max-w-7xl px-4 sm:px-6 lg:px-8";

      
        if (fullWidth)
            wrapperClass = "w-full px-4 sm:px-6 lg:px-12";
    }

    <div class="pt-16">
        <div class="@wrapperClass">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/gesture-control.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
