@page
@model RegisterModel
@{
    ViewData["Title"] = "Înregistrare";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card rounded-4 border-0 shadow-lg">
                <div class="card-body p-4">

                    <h2 class="text-primary fw-bold mb-4 text-center">Creați un cont nou</h2>

                    <form id="registerForm" enctype="multipart/form-data" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                     
                        <div class="mb-3 text-center">
                            <img id="previewImage" src="/images/default-profile.png"
                                 class="rounded-circle border shadow"
                                 style="width:120px; height:120px; object-fit:cover;">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Poză de profil</label>
                            <input asp-for="Input.PhotoFile" type="file" class="form-control"
                                   accept="image/*" onchange="previewFile(event)">
                            <span asp-validation-for="Input.PhotoFile" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Prenume">
                            <label asp-for="Input.FirstName"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Nume">
                            <label asp-for="Input.LastName"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="07xxxxxxx">
                            <label asp-for="Input.PhoneNumber"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Role" class="form-control" placeholder="Ex: Student / Profesor">
                            <label asp-for="Input.Role"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.BirthDate" type="date" class="form-control">
                            <label asp-for="Input.BirthDate"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="email">
                            <label asp-for="Input.Email"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Parolă">
                            <label asp-for="Input.Password"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmare parolă">
                            <label asp-for="Input.ConfirmPassword"></label>
                        </div>

                        <button class="btn btn-primary w-100 fw-bold rounded-3 mt-3 py-2">
                            Înregistrare
                        </button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>

    <script>
        function previewFile(event) {
            const output = document.getElementById('previewImage');
            output.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}
